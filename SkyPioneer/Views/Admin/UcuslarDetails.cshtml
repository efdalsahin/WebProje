<div class="bg-white bg-opacity-75">
<h1>UcusDetails</h1>

<p>
            <a asp-action="UcusCreate" asp-controller="Ucus">@_localization.Getkey("Create").Value</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UcusID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KalkisSaati)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kalkis.Isim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Varis.Isim)
