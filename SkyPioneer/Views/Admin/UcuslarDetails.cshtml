            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UcusID)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.KalkisSaati)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Kalkis.Isim)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Varis.Isim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                <a asp-controller="Ucus" asp-action="UcusDetails" asp-route-id="@item.UcusID">Detaylar</a>
                <a asp-controller="Ucus" asp-action="UcusDelete" asp-route-id="@item.UcusID">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

