@model SkyPioneer.Models.Ucak

@{
    ViewData["Title"] = "UcakCreate";
}

<div class="orta">

<h4>Ucak Oluştur</h4>
    <h3 style="color:red; ">@TempData["msj"]</h3>
<hr />
<div class="row bg-white bg-opacity-75 p-4">
    <div class="col-md-12">
        <form asp-action="UcakCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Modell" class="control-label"></label>
                <input asp-for="Modell" class="form-control" />
                <span asp-validation-for="Modell" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kapasite" class="control-label"></label>
                <input asp-for="Kapasite" class="form-control" />
                <span asp-validation-for="Kapasite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HavaYoluID" class="control-label"></label>
                <select asp-for="HavaYoluID" class="form-control" asp-items="@ViewBag.liste"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
