@model SkyPioneer.Models.Kullanici

@{
    ViewData["Title"] = "Giris";
}


<div class="orta">
    <h3 style="color:red; ">@TempData["msj"]</h3>
    <div class="row">
        <div class="bg-white bg-opacity-75 p-4">
        <form asp-action="Giris">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MailAdres" class="control-label"></label>
                <input asp-for="MailAdres" class="form-control" />
                <span asp-validation-for="MailAdres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sifre" class="control-label"></label>
                <input asp-for="Sifre" class="form-control" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
           
            
            <div class="form-group">
                <input type="submit" value="Giriş" class="btn btn-primary" />
            </div>
        </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
